<Window x:Class="LivelloHDServicePRO.Views.SlaSetupWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Configurazione SLA per Priorita" Height="650" Width="800"
WindowStartupLocation="CenterOwner"
ShowInTaskbar="False"
Background="#F5F5F5">
    <Window.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Opacity="0.15" ShadowDepth="1" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFF44336"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFFF9800"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF607D8B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Opacity="0.12" ShadowDepth="1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox & TextBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
            <Setter Property="MinWidth" Value="60"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Header Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                VerticalAlignment="Top" Height="60">
            <Grid Margin="20,12">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŽ¯" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Configurazione SLA per Priorita" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        <TextBlock Text="Tempi di presa in carico e risoluzione" 
                                   FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Margin="16,70,16,80" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Client Selection Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="CLIENTE" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ClienteComboBox" Width="200" IsEditable="True"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="ClienteComboBox_SelectionChanged"
                                      ToolTip="Seleziona un cliente esistente o digita un nuovo nome"/>
                            <Button x:Name="NuovoClienteButton" Content="ðŸ‘¤ Nuovo Cliente" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="12,6" FontSize="11"
                                    Click="NuovoClienteButton_Click"
                                    ToolTip="Crea un nuovo setup SLA per un cliente"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Priority Management Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="GESTIONE PRIORITA" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Priorita:" VerticalAlignment="Center" 
                                       FontSize="11" Foreground="#7F8C8D" Margin="0,0,8,0" Width="60"/>
                            <TextBox x:Name="NuovaPrioritaTextBox" Width="150"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     ToolTip="Inserisci nome nuova priorita"/>
                            <Button x:Name="AggiungiPrioritaButton" Content="âž• Aggiungi" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="10,6" FontSize="11" Margin="6,4"
                                    Click="AggiungiPrioritaButton_Click"
                                    ToolTip="Aggiungi nuova priorita"/>
                            <Button x:Name="EliminaPrioritaButton" Content="ðŸ—‘ï¸ Elimina" 
                                    Style="{StaticResource DangerButtonStyle}"
                                    Padding="10,6" FontSize="11" Margin="6,4"
                                    Click="EliminaPrioritaButton_Click" IsEnabled="False"
                                    ToolTip="Elimina priorita selezionata"/>
                        </StackPanel>
                        
                        <Separator Background="#E0E0E0" Margin="0,4,0,8"/>
                        
                        <!-- Test Priority Matching -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Test:" VerticalAlignment="Center" 
                                       FontSize="11" Foreground="#7F8C8D" Margin="0,0,8,0" Width="60" FontStyle="Italic"/>
                            <TextBox x:Name="TestPrioritaTextBox" Width="200"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     ToolTip="Es: ?? Media - per testare il matching"/>
                            <Button x:Name="TestMatchingButton" Content="ðŸ” Test" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="10,6" FontSize="11" Margin="6,4"
                                    Click="TestMatchingButton_Click"
                                    ToolTip="Testa se questa priorita viene riconosciuta"/>
                            <TextBlock x:Name="TestResultTextBlock" VerticalAlignment="Center" 
                                       Margin="8,0" FontWeight="SemiBold" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SLA Rules Card -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="CONFIGURAZIONE TEMPI SLA" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,8"/>
                        
                        <!-- Header -->
                        <Grid Grid.Row="1" Background="#F8F9FA" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Priorita" FontWeight="SemiBold" 
                                       FontSize="11" Foreground="#2C3E50"
                                       Padding="12,8" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="ðŸ“¥ Presa in Carico" FontWeight="SemiBold" 
                                       FontSize="11" Foreground="#2C3E50"
                                       Padding="12,8" VerticalAlignment="Center" TextAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="âœ… Risoluzione" FontWeight="SemiBold" 
                                       FontSize="11" Foreground="#2C3E50"
                                       Padding="12,8" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Grid>
                        
                        <!-- SLA Rules List -->
                        <ItemsControl Grid.Row="2" x:Name="SlaRulesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8" Margin="0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Priority -->
                                            <TextBlock Grid.Column="0" Text="{Binding Priorita}" 
                                                       VerticalAlignment="Center" Padding="4" FontWeight="SemiBold" FontSize="12"/>
                                            
                                            <!-- Presa in Carico -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.GiorniDisponibili, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          SelectedItem="{Binding GiorniPresaInCarico, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource ComboBoxStyle}" Width="55"/>
                                                <TextBlock Text="gg" VerticalAlignment="Center" Margin="2,0,8,0" FontSize="10" Foreground="#7F8C8D"/>
                                                <ComboBox ItemsSource="{Binding DataContext.OreDisponibili, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          SelectedItem="{Binding OrePresaInCarico, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource ComboBoxStyle}" Width="55"/>
                                                <TextBlock Text="h" VerticalAlignment="Center" Margin="2,0,8,0" FontSize="10" Foreground="#7F8C8D"/>
                                                <Border Background="#E3F2FD" CornerRadius="3" Padding="8,4">
                                                    <TextBlock Text="{Binding TempoPresaInCaricoFormatted}" 
                                                               VerticalAlignment="Center"
                                                               FontWeight="SemiBold" Foreground="#1976D2" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- Risoluzione -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.GiorniDisponibili, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          SelectedItem="{Binding GiorniRisoluzione, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource ComboBoxStyle}" Width="55"/>
                                                <TextBlock Text="gg" VerticalAlignment="Center" Margin="2,0,8,0" FontSize="10" Foreground="#7F8C8D"/>
                                                <ComboBox ItemsSource="{Binding DataContext.OreDisponibili, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          SelectedItem="{Binding OreRisoluzione, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource ComboBoxStyle}" Width="55"/>
                                                <TextBlock Text="h" VerticalAlignment="Center" Margin="2,0,8,0" FontSize="10" Foreground="#7F8C8D"/>
                                                <Border Background="#E8F5E9" CornerRadius="3" Padding="8,4">
                                                    <TextBlock Text="{Binding TempoRisoluzioneFormatted}" 
                                                               VerticalAlignment="Center"
                                                               FontWeight="SemiBold" Foreground="#388E3C" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Action Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0"
                VerticalAlignment="Bottom" Height="70">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="SalvaButton" Content="ðŸ’¾ Salva Setup SLA" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Padding="20,10" FontSize="13"
                        Click="SalvaButton_Click"
                        ToolTip="Salva la configurazione SLA per il cliente selezionato"/>
                <Button x:Name="RipristinaDefaultButton" Content="ðŸ”„ Ripristina Default" 
                        Style="{StaticResource WarningButtonStyle}"
                        Click="RipristinaDefaultButton_Click"
                        ToolTip="Ripristina le priorita e tempi default"/>
                <Button Content="âœ“ OK" x:Name="OkButton" Width="90" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="OkButton_Click" IsDefault="True"/>
                <Button Content="âœ— Annulla" x:Name="CancelButton" Width="90" 
                        Style="{StaticResource NeutralButtonStyle}"
                        Click="CancelButton_Click" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
