<Window x:Class="LivelloHDServicePRO.Views.OrariLavorativiWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Configurazione Ore e Giorni Lavorativi" 
SizeToContent="WidthAndHeight"
MinWidth="800" MinHeight="500"
MaxWidth="1200" MaxHeight="900"
WindowStartupLocation="CenterOwner"
ShowInTaskbar="False"
Background="#F5F5F5">
    <Window.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Opacity="0.15" ShadowDepth="1" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF607D8B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Opacity="0.12" ShadowDepth="1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="TimeComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Header Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                VerticalAlignment="Top" Height="60">
            <Grid Margin="20,12">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ•" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Configurazione Ore e Giorni Lavorativi" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        <TextBlock Text="Setup orari per cliente" 
                                   FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Margin="20,70,20,80" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Client Selection Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="CLIENTE" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ClienteComboBox" Width="250" IsEditable="True"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="ClienteComboBox_SelectionChanged"
                                      ToolTip="Seleziona un cliente esistente o digita un nuovo nome"/>
                            <Button x:Name="NuovoClienteButton" Content="ðŸ‘¤ Nuovo Cliente" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="NuovoClienteButton_Click"
                                    ToolTip="Crea un nuovo setup cliente"/>
                            <CheckBox x:Name="ConsideraFestivitaCheckBox" Content="Considera Festivita" 
                                      VerticalAlignment="Center" Margin="20,0,0,0" FontSize="11"
                                      ToolTip="Se abilitato, le festivita non saranno considerate giorni lavorativi"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="AZIONI RAPIDE" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CopiaLunediButton" Content="ðŸ”„ Copia Orari Lunedi" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="CopiaLunediButton_Click"
                                    ToolTip="Copia gli orari del lunedi a tutti i giorni lavorativi"/>
                            <Button x:Name="SetDefaultButton" Content="âš™ï¸ Imposta Default" 
                                    Style="{StaticResource NeutralButtonStyle}"
                                    Click="SetDefaultButton_Click"
                                    ToolTip="Imposta orari default (9:00-18:00, Lun-Ven)"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Days Configuration Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ORARI PER GIORNO" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" Margin="0,0,0,16"/>
                        <StackPanel x:Name="GiorniStackPanel">
                            <!-- Days will be dynamically generated here -->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Action Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0"
                VerticalAlignment="Bottom" Height="70">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="SalvaButton" Content="ðŸ’¾  Salva Setup Cliente" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Padding="20,10" FontSize="13"
                        Click="SalvaButton_Click"
                        ToolTip="Salva la configurazione per il cliente selezionato"/>
                <Button Content="âœ“ OK" x:Name="OkButton" Width="90" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="OkButton_Click" IsDefault="True"/>
                <Button Content="âœ— Annulla" x:Name="CancelButton" Width="90" 
                        Style="{StaticResource NeutralButtonStyle}"
                        Click="CancelButton_Click" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
