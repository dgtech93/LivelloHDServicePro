<Window x:Class="LivelloHDServicePRO.Views.FestivitaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione Festivita Nazionali" Height="650" Width="750"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Opacity="0.15" ShadowDepth="1" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFF44336"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFFF9800"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF607D8B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Opacity="0.12" ShadowDepth="1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox & TextBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Header Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                VerticalAlignment="Top" Height="60">
            <Grid Margin="20,12">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎉" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Gestione Festivita Nazionali" 
                               FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        <TextBlock Text="Configura giorni festivi per il calcolo SLA" 
                                   FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Margin="20,70,20,80">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Input Card -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="AGGIUNGI/MODIFICA FESTIVITÀ" FontSize="11" FontWeight="SemiBold" 
                               Foreground="#7F8C8D" Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row: Day and Month -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Giorno:" VerticalAlignment="Center" 
                                       FontSize="11" Foreground="#7F8C8D" Margin="0,0,8,0" Width="70"/>
                            <ComboBox x:Name="GiornoComboBox" Width="80"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="GiornoComboBox_SelectionChanged"/>
                            
                            <TextBlock Text="Mese:" VerticalAlignment="Center" 
                                       FontSize="11" Foreground="#7F8C8D" Margin="20,0,8,0" Width="50"/>
                            <ComboBox x:Name="MeseComboBox" Width="150"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="MeseComboBox_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Second Row: Name and Buttons -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Nome:" VerticalAlignment="Center" 
                                       FontSize="11" Foreground="#7F8C8D" Margin="0,0,8,0" Width="70"/>
                            <TextBox x:Name="NomeFestivitaTextBox" Grid.Column="1"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextChanged="NomeFestivitaTextBox_TextChanged"/>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                                <Button x:Name="AggiungiButton" Content="➕ Aggiungi" 
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="AggiungiButton_Click"
                                        ToolTip="Aggiungi nuova festività"/>
                                <Button x:Name="ModificaButton" Content="✏️ Modifica" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="ModificaButton_Click" IsEnabled="False"
                                        ToolTip="Modifica festività selezionata"/>
                                <Button x:Name="AnnullaButton" Content="✗ Annulla" 
                                        Style="{StaticResource NeutralButtonStyle}"
                                        Click="AnnullaButton_Click" IsEnabled="False"
                                        ToolTip="Annulla modifica"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- List Card -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Actions Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="FESTIVITÀ CONFIGURATE" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="#7F8C8D" VerticalAlignment="Center"/>
                            <Border Background="#F8F9FA" CornerRadius="4" Padding="8,4" Margin="12,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Totali:" FontSize="10" Foreground="#7F8C8D" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ContatoreFestivitaTextBlock" Text="0" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="EliminaButton" Content="🗑️ Elimina" 
                                    Style="{StaticResource DangerButtonStyle}"
                                    Padding="12,6" FontSize="11"
                                    Click="EliminaButton_Click" IsEnabled="False"
                                    ToolTip="Elimina festività selezionata"/>
                            <Button x:Name="RipristinaDefaultButton" Content="🔄 Ripristina Default" 
                                    Style="{StaticResource WarningButtonStyle}"
                                    Padding="12,6" FontSize="11"
                                    Click="RipristinaDefaultButton_Click"
                                    ToolTip="Ripristina festività nazionali italiane"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- List -->
                    <ListBox x:Name="FestivitaListBox" Grid.Row="1"
                             SelectionChanged="FestivitaListBox_SelectionChanged"
                             DisplayMemberPath="DisplayText"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#F0F0F0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Bottom Action Bar -->
        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0"
                VerticalAlignment="Bottom" Height="70">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="SalvaButton" Content="💾 Salva Configurazione" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Padding="20,10" FontSize="13"
                        Click="SalvaButton_Click"
                        ToolTip="Salva tutte le festività nel file di configurazione"/>
                <Button Content="✓ OK" x:Name="OkButton" Width="90" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="OkButton_Click" IsDefault="True"/>
                <Button Content="✗ Annulla" x:Name="CancelButton" Width="90" 
                        Style="{StaticResource NeutralButtonStyle}"
                        Click="CancelButton_Click" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>