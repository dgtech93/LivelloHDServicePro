<Window x:Class="LivelloHDServicePRO.Views.ColumnSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleziona Colonne da Visualizzare" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ColumnsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayName}" 
                                  IsChecked="{Binding IsVisible}" 
                                  Margin="5,2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
            <Button Content="Seleziona Tutto" x:Name="SelectAllButton" Width="100" Margin="5" Click="SelectAllButton_Click"/>
            <Button Content="Deseleziona Tutto" x:Name="DeselectAllButton" Width="100" Margin="5" Click="DeselectAllButton_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="OK" x:Name="OkButton" Width="75" Margin="5" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Annulla" x:Name="CancelButton" Width="75" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>