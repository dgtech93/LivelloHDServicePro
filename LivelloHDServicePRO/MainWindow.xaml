<Window x:Class="LivelloHDServicePRO.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:LivelloHDServicePRO"
xmlns:converters="clr-namespace:LivelloHDServicePRO.Converters"
mc:Ignorable="d"
Title="Livello HD Service PRO - Calcolo SLA" Height="800" Width="1400"
WindowState="Maximized" Background="#F5F5F5">
<Window.Resources>
    <!-- Converters -->
    <converters:SlaViolationBackgroundConverter x:Key="SlaViolationBackgroundConverter"/>
    <converters:SlaViolationForegroundConverter x:Key="SlaViolationForegroundConverter"/>
    
    <!-- Modern Button Styles - Lighter Version -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Opacity="0.15" ShadowDepth="1" BlurRadius="4"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Gray" Opacity="0.25" ShadowDepth="2" BlurRadius="6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FF4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FF2196F3"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FF9C27B0"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FFFF9800"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FFF44336"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="#FF607D8B"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Modern Card Style - Lighter -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" Opacity="0.12" ShadowDepth="1" BlurRadius="8"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Modern TextBox Style -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#2196F3"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Modern ComboBox Style -->
    <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <!-- Style for DataGrid cells -->
    <Style x:Key="WrapTextStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="4,3"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="TextTrimming" Value="None"/>
    </Style>
        
    <!-- Style for DataGrid headers -->
    <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#FF4A90E2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="#FF2E5E8A"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>
    
    <!-- Style for ToolBar Menu -->
    <Style x:Key="ToolBarMenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Style for ToolBar MenuItem -->
    <Style x:Key="ToolBarMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE0E0E0"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Style for SLA Column Headers -->
    <Style x:Key="SlaHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#FF4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="#FF388E3C"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>
    
    <!-- Style for SLA Cell Content -->
    <Style x:Key="SlaCellStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Style for TMC Fuori SLA Cell -->
    <Style x:Key="TmcFuoriSlaCellStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background">
            <Setter.Value>
                <Binding Path="." Converter="{StaticResource SlaViolationBackgroundConverter}" ConverterParameter="TMC"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <Binding Path="." Converter="{StaticResource SlaViolationForegroundConverter}" ConverterParameter="TMC"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Style for T-EFF Fuori SLA Cell -->
    <Style x:Key="TeffFuoriSlaCellStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background">
            <Setter.Value>
                <Binding Path="." Converter="{StaticResource SlaViolationBackgroundConverter}" ConverterParameter="TEFF"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <Binding Path="." Converter="{StaticResource SlaViolationForegroundConverter}" ConverterParameter="TEFF"/>
            </Setter.Value>
        </Setter>
    </Style>
</Window.Resources>
    
<Grid>
<Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
        
<!-- Clean Header Bar -->
<Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,12">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
                
        <!-- Logo/Title Section -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="📊" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Livello HD Service PRO" 
                           FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50"/>
                <TextBlock Text="Sistema di Calcolo SLA" 
                           FontSize="10" Foreground="#7F8C8D" Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>
                
        <!-- Stats Badge -->
        <Border Grid.Column="2" 
                Background="#F8F9FA" 
                CornerRadius="4" 
                Padding="16,6" 
                Margin="0,0,16,0"
                VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📁" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="Record:" Foreground="#7F8C8D" FontSize="11" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="RecordCountTextBlock" Text="0" FontWeight="SemiBold" Foreground="#2C3E50" FontSize="13" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
                
        <!-- Settings Menu -->
        <Menu Grid.Column="3" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
            <MenuItem Padding="10,6" Background="#F8F9FA" Margin="0">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Configurazione" FontWeight="SemiBold" FontSize="12" Foreground="#2C3E50"/>
                    </StackPanel>
                </MenuItem.Header>
                <MenuItem Header="🕒 Ore e Giorni Lavorativi" Click="OreLavorativeMenuItem_Click"
                          ToolTip="Configura orari e giorni di lavoro" Padding="10,8" FontSize="12"/>
                <MenuItem Header="🎉 Festività" Click="FestivitaMenuItem_Click"
                          ToolTip="Gestisci le festività e giorni non lavorativi" Padding="10,8" FontSize="12"/>
                <MenuItem Header="⏱️ SLA" Click="SlaMenuItem_Click"
                          ToolTip="Configura i parametri SLA" Padding="10,8" FontSize="12"/>
            </MenuItem>
        </Menu>
    </Grid>
</Border>
        
<!-- Actions and Filters - Clean Layout -->
<Border Grid.Row="1" Background="White" Padding="20,16">
    <StackPanel>
        <!-- Primary Actions Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="AZIONI" 
                       FontSize="11" 
                       FontWeight="SemiBold" 
                       Foreground="#7F8C8D" 
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            
            <Button x:Name="ImportExcelButton" 
                    Content="📥 Importa Excel" 
                    Click="ImportExcelButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    ToolTip="Importa file Excel con i dati SLA"/>
                    
            <Button x:Name="ExportExcelButton" 
                    Content="📤 Esporta Excel" 
                    Click="ExportExcelButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    IsEnabled="False"
                    ToolTip="Esporta i dati filtrati in formato Excel"/>
                    
            <Button x:Name="SelectColumnsButton" 
                    Content="🔧 Colonne" 
                    Click="SelectColumnsButton_Click"
                    Style="{StaticResource NeutralButtonStyle}"
                    IsEnabled="False"
                    ToolTip="Scegli quali colonne visualizzare"/>
                    
            <Button x:Name="ReportAnalisiButton" 
                    Content="📊 Report Analisi" 
                    Click="ReportAnalisiButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    IsEnabled="False"
                    ToolTip="Genera report completo per l'analisi della qualità del servizio"/>
        </StackPanel>
        
        <Separator Background="#E0E0E0" Margin="0,0,0,16"/>
        
        <!-- Cliente and Options Row -->
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                <TextBlock Text="CLIENTE" 
                           FontSize="11" 
                           FontWeight="SemiBold" 
                           Foreground="#7F8C8D" 
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="ClienteComboBox" 
                          Width="180" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="ClienteComboBox_SelectionChanged"
                          ToolTip="Seleziona il cliente per applicare il setup orari lavorativi"/>
            </StackPanel>
            
            <CheckBox Grid.Column="1" 
                      x:Name="UseTodayDateCheckBox" 
                      Content="📅 Usa Data Odierna per date mancanti" 
                      VerticalAlignment="Center" 
                      FontSize="11"
                      Checked="UseTodayDateCheckBox_Checked" 
                      Unchecked="UseTodayDateCheckBox_Unchecked"
                      ToolTip="Se attivo, usa la data odierna per calcolare SLA quando le date di chiusura, presa in carico o fine sospensione sono mancanti"/>
        </Grid>
        
        <Separator Background="#E0E0E0" Margin="0,0,0,16"/>
        
        <!-- Filters Row -->
        <StackPanel>
            <TextBlock Text="FILTRI" 
                       FontSize="11" 
                       FontWeight="SemiBold" 
                       Foreground="#7F8C8D" 
                       Margin="0,0,0,12"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Veloce:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#7F8C8D"/>
                    <ComboBox x:Name="QuickFilterComboBox" 
                              Width="160"
                              Style="{StaticResource ModernComboBoxStyle}"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Id"
                              SelectionChanged="QuickFilterComboBox_SelectionChanged"
                              ToolTip="Seleziona un filtro predefinito"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Testo:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#7F8C8D"/>
                    <TextBox x:Name="FilterTextBox" 
                             Width="180"
                             Style="{StaticResource ModernTextBoxStyle}"
                             TextChanged="FilterTextBox_TextChanged"
                             ToolTip="Inserisci testo per filtrare i risultati"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Colonna:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#7F8C8D"/>
                    <ComboBox x:Name="AddFilterComboBox" 
                              Width="160"
                              Style="{StaticResource ModernComboBoxStyle}"
                              SelectionChanged="AddFilterComboBox_SelectionChanged"
                              ToolTip="Seleziona una colonna per aggiungere un filtro"/>
                </StackPanel>
                
                <Button Grid.Column="3"
                        x:Name="ClearFiltersButton" 
                        Content="🗑️ Cancella" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="ClearFiltersButton_Click"
                        Padding="12,6"
                        FontSize="11"
                        ToolTip="Rimuovi tutti i filtri applicati"/>
                
                <StackPanel Grid.Column="4" x:Name="ActiveFiltersPanel" Orientation="Horizontal" Margin="16,0,0,0"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</Border>
        
        
        
        <!-- DataGrid with Clean Style -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="20,8,20,12">
            <DataGrid x:Name="SlaDataGrid" AutoGenerateColumns="False" 
                      IsReadOnly="True" GridLinesVisibility="All"
                      AlternationCount="2" AlternatingRowBackground="#FAFAFA"
                      CanUserSortColumns="True" CanUserReorderColumns="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      RowHeight="NaN"
                      CanUserResizeRows="True"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      MouseDoubleClick="SlaDataGrid_MouseDoubleClick"
                      FrozenColumnCount="6"
                      BorderThickness="0">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="Auto"/>
                        <Setter Property="MinHeight" Value="30"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Border>
        
        <!-- Clean Status Bar -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ℹ️" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Pronto" 
                               Foreground="#2C3E50" 
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                           Text="Livello HD Service PRO v1.1.3" 
                           Foreground="#95A5A6" 
                           FontSize="10"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
